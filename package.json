{
  "name": "hyperion-launcher",
  "version": "1.0.31",
  "description": "Custom Minecraft launcher for 1.21.4 Fabric",
  "main": "main.mjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BONUS09iq/hyperion-launcher.git"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.6.2",
    "minecraft-launcher-core": "^3.18.2",
    "skinview3d": "^3.4.1"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.hyperion.launcher",
    "productName": "Hyperion Launcher",
    "files": [
      "main.mjs",
      "preload.cjs",
      "paths.mjs",
      "fabric.mjs",
      "mods.mjs",
      "launcher.mjs",
      "settings.mjs",
      "renderer/**/*",
      "package.json",
      "resources/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "icon": "build/icon.ico",
    "extraResources": [
      {
        "from": ".minecraft/",
        "to": ".minecraft"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Hyperion Launcher"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "BONUS09iq",
        "repo": "hyperion-launcher",
        "releaseType": "release"
      }
    ]
  }
}
